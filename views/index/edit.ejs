<%- include ('../partials/header'); -%>
    <div class="row">
        <div style="width: 70%; margin: 55px auto;">
            <form action="/activate/<%=polls._id%>?_method=PUT" method="POST">
                <div >
                    <h1 style="text-align:center">Are you confirming to start voting?</h1>
                </div>
                <div class="form-group">
                        <input class="form-control" type="number" name= "count"   placeholder="No of Voters">
                </div>
                <div class="form-group" style="width: 30%; margin: 10px auto;">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Yes" role="button" placeholder="No"></input>
                </div>
                <div class="form-group" style="width: 30%; margin: 10px auto;">
                    <a href="/poll" class="btn btn-primary btn-lg active btn-block" role="button" aria-pressed="true">No</a> 
                  </div>
            </form>
        </div>
    </div>
<%- include ('../partials/footer'); -%>
