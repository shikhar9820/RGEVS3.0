<%- include ('../partials/header'); -%>
<script src="cd.js"></script>

<%  var counter=0;%>
<script src="cd.js"></script>
<div style="width: 60%; margin: 50px auto;">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Polls</th>
        <th scope="col">Status</th>

      </tr>
    </thead>
    <div id="reload"></div>
    <tbody>


      <% poll.forEach(function(polling){ %>
        <%  var Difference = Math.abs(currDate.getTime()-polling.startDate.getTime());%>
        <%  var Hours      = Math.ceil(Difference / (1000 * 3600 ));%>
      <tr>
        
        <%if(polling.flag==true && Hours< 24 && polling.code==currentUser.code ){%>
        <% counter=counter+1;%>
        <th scope="row"><%=counter%></th>
        <td><%= polling.poll %></td>
        <td>
          <div class="form-group">
            <a href="/hello/<%=polling._id%>" role="button" aria-pressed="true">Make Vote</a>
          </div>
        </td>
        <%}%>
        </tr>
        <%});%>


    </tbody>
</div>
</table>
</div>
</div>

<%- include ('../partials/footer'); -%>