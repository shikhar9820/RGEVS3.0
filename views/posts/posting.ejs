<%- include ('../partials/header'); -%>
<h1 class="text-primary text-center">Name of the poll</h1>
<div class="container">
  <div class="row">
      <div style="width: 30%; margin: 50px auto;">
         <form action="/post/<%=pollId%>?_method=PUT" method="POST">
           <div class="form-group">
              <input class="form-control"  type="text" name= "posting"   placeholder="Post">
           </div>
           <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" role="button" aria-pressed="true" type="submit" >Add a post</button>           </div>
         </form>
      </div>    
  </div>
</div>
 <div style="width: 60%; margin: 50px auto;">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Post</th>
      </tr>
    </thead>
    
    <tbody>
        <% var counter=0 %>
        <% posts.forEach(function(posting){ %>
          <%counter= counter+1 %>
      <tr>
        <th scope="row"><%=counter%></th>
        <td><%= posting %></td>

      </tr>
       <% }); %>
    </tbody>

  </table>
  
  <div style="width: 30%; margin: 50px auto;">
    <a href="/house/<%=pollId%>" class="btn btn-lg btn-primary btn-block" role="button" aria-pressed="true">Next</a> 
  </div>

  </div>
</div>


<%- include ('../partials/footer'); -%>
